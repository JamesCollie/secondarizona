'++LotusScript Development Environment:2:2:RebuildFormViewForumas:1:8
Sub RebuildFormViewForumas(Form As String)
	Dim Session As New NotesSession	
	Dim DB As NotesDatabase
	Dim Doc As NotesDocument
	
	Set DB = Session.CurrentDatabase
	Set Doc = DB.GetProfileDocument("ViewRebuild")
	If Not Doc Is Nothing Then
		Call Doc.AppendItemValue("Forms",Form)		
	End If
End Sub